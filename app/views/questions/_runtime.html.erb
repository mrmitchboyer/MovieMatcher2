<div class="panel panel-default col-md-8 col-md-offset-2 question text-center">
  <h2>How long should the movie be?</h2>
  <div class="panel-body">
  <div class="multiple-alert">
    <div class="arrow-left"></div>
    <div class="blue-box text-left"><em>You can choose multiple answers</em></div>
  </div>
    <%= hidden_field_tag "ans[runtime][name]", :runtime %>
    <div class="col-sm-4 col-sm-offset-4">
      <p>
        <% @runtimes.each do |label, value| %>
        <div class="checkboxes text-left">
          <%= check_box_tag "ans[runtime][answer][]", value %>
          <%= label_tag "ans[runtime][answer][]", label %>
        </div>
        <% end %>
      </p>
    </div>
    <div class="clearfix"></div>
    <div>
    <h4>How much do you care?</h4>
      <p>
        <% Question.weight.each do |length, weight| %>
          <%= radio_button_tag "ans[runtime][weight]", weight %>
          <%= label_tag "ans[runtime][weight]", length %>
        <% end %>
      </p>
    </div>
    <a class="btn btn-primary new-question blue-glow btn-animation">Ask Another Question</a>


  </div>
</div>